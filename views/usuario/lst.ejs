<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        table{
            max-width: 100%;
        }
        table, td, th{
            border: solid 1px red;
            border-collapse:collapse;
        }
        td,th{
            padding: 5px;
        }
        input{
            padding: 10px;
        }
        input[type="text"]{
            width: 80%;
            margin-bottom: 10px;
        }
    </style>
    <title>Listar Usuários</title>
</head>
<body>
    <form method="post">
        <input type="text" name="pesquisar" id="pesquisar" 
            placeholder="Digite aqui o que você deseja pesquisar!">
        <input type="submit" value="Pesquisar">
    </form>
    <table>
        <tr>
            <th>_id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Foto</th>
            <th>Criação</th>
            <th>Edita</th>
            <th>Deleta</th>
        </tr>

        <%Usuarios.forEach(function(usuario){  %>
            <tr>
                <td><%=usuario._id %></td>
                <td><%=usuario.nome %></td>
                <td><%=usuario.email %></td>
                <td><%=usuario.foto %></td>
                <td><%=usuario.criacao %></td>
                <td>
                    <a href="/usuario/edt/<%=usuario._id %>">Editar</a>
                </td>
                <td>
                    <a href="/usuario/del/<%=usuario._id %>">Deletar</a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>